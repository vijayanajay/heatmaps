# Example environment variables
# Rename this file to .env and fill in your actual values

# SECURITY WARNING: keep the secret key used in production secret!
# Generate a new secret key for your project
# You can use: python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
SECRET_KEY="your-django-secret-key-here"

# SECURITY WARNING: don't run with debug turned on in production!
DEBUG=True

# Database URL
# Examples:
# PostgreSQL: DATABASE_URL=postgres://user:password@host:port/dbname
# SQLite:     DATABASE_URL=sqlite:///db.sqlite3
# Make sure the path is correct if using SQLite
DATABASE_URL=sqlite:///db.sqlite3

# Allowed Hosts (space separated)
# For development, often 'localhost 127.0.0.1' is sufficient
# For production, set this to your actual domain(s)
# ALLOWED_HOSTS="yourdomain.com www.yourdomain.com"

# Email settings (if needed, example for console output)
# EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend 